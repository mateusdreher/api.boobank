{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "outDir": "./dist",
    "rootDirs": [
      "./",
      "./dist"
    ],
    "typeRoots": ["src/@types"],                                      
    "removeComments": true,                            
    "strictPropertyInitialization": false,
    "strict": true,                                        
    "baseUrl": "src",                       
    "paths": {
      "@entities/*": ["entities/*"],
      "@providers/*": ["providers/*"],
      "@repositories/*": ["repositories/*"],
      "@useCases/*": ["useCases/*"],
      "@services/*": ["services/*"]
    },                            
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true ,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  }
}
